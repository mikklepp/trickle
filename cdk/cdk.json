{
  "app": "npx ts-node --require dotenv/config --prefer-ts-exts bin/trickle.ts",
  "watch": {
    "include": [
      "bin/**/*.ts",
      "lib/**/*.ts",
      "../backend/dist/**/*.js",
      "../frontend/dist/**/*.{js,css,html,json}"
    ],
    "exclude": [
      "node_modules",
      "cdk.out",
      "**/*.d.ts",
      "**/*.map",
      "../backend/dist/node_modules/**",
      "../frontend/dist/**/*.map"
    ]
  }
}
